<Window x:Class="ModbusConnection.View.ConnectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ModbusConnection.View"
        mc:Ignorable="d"
        Title="ConnectionWindow" Height="250" Width="270">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <Label Margin="0,0,10,0">Ip adresa:</Label>
                <TextBox Width="120px" Height="20px" Text="{Binding IpAddress}"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,20,0,40">
                <Label Margin="0,0,38,0">Port:</Label>
                <TextBox Width="120px" Height="20px" Text="{Binding Port}"></TextBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Margin="0,0,10,0" Height="25" Width="80" Content="Konektuj se" Command="{Binding ConnectToRTUCommand}"/>
                <Button Margin="10,0,0,0" Height="25" Width="90" Content="Diskonektuj se"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>
